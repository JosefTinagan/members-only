<h1>New Post</h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(@post) do |f| %>
			
			<%= hidden_field_tag :user_id, @user.id %>

			<%= f.label :title %>
			<%= f.text_field :title, class: 'form-control' %>

			<%= f.label :body %>
			<%= f.text_field :body, class: 'form-control' %>

			<%= f.submit "Submit", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>